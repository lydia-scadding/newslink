<%= link_to link_votes_path(link, value: 1), method: :post, remote: true do %>
  <i class="fas fa-caret-up <%= user_signed_in? && current_user.upvoted?(link) ? 'voted' : '' %>"></i>
<% end %>
<p><%= link.points %></p>
<%= link_to link_votes_path(link, value: -1), method: :post, remote: true do %>
  <i class="fas fa-caret-down <%= user_signed_in? && current_user.downvoted?(link) ? 'voted' : '' %>"></i>
<% end %>

