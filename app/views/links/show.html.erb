<div class="link-info">
  <h3><%= @link.title %></h3>
  <p><%= @link.url %></p>
  <p><%= @link.description %></p>
  <% if user_signed_in? && policy(@link).edit? %>
    <%= link_to 'Edit', edit_link_path(@link) %>
  <% end %>
  <% if user_signed_in? && policy(@link).destroy? %>
    <%= link_to 'Delete', link_path(@link), method: :delete, data: { confirm: "Are you sure you want to delete this link?"} %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= render "comments/form" %>
<% end %>

<% @comments.each do |comment| %>
  <p>
    <strong><%= comment.user.username %></strong>
    <span><%= time_ago_in_words(comment.created_at) %> ago</span>
  </p>
  <p><%= comment.body %></p>
  <% if user_signed_in? && policy(comment).edit? %>
    <%= link_to 'Edit', edit_comment_path(comment) %>
  <% end %>
  <hr>

<% end %>

