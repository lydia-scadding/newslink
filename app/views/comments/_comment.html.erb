<div class="comment-card" id="comment-<%= comment.id %>">
  <div class="comment-data">
    <span><%= comment.user.username %> | </span>
    <span><%= time_ago_in_words(comment.created_at) %> ago</span>
    <% if user_signed_in? && policy(comment).edit? %>
      <span class="user-action"> | <%= link_to 'edit', edit_comment_path(comment) %> | </span>
      <span class="user-action"><%= link_to 'delete', comment_path(comment), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this comment?"} %></span>
    <% end %>
  </div>
  <p><%= comment.body %></p>
  <hr>
</div>
