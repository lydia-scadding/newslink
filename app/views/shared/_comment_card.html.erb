<div class="comment-card" id="comment-<%= comment.id %>">
  <div class="comment-data">
    <span><%= comment.user.username %> </span>
    <span><%= time_ago_in_words(comment.created_at) %> ago</span>
    <% if user_signed_in? && policy(comment).edit? %>
      <span><%= link_to 'Edit', edit_comment_path(comment) %></span>
      <span><%= link_to 'Delete', comment_path(comment), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this comment?"} %></span>
    <% end %>
  </div>
  <p><%= comment.body %></p>

</div>
